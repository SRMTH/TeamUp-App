<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".track">

    <TextView
        android:id="@+id/tv_track_name"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:text="Student Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_track_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present Percentage :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@id/tv_track_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_track_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absent Percentage : "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@id/tv_track_present"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_present_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_toRightOf="@id/tv_track_present"
        android:layout_alignBaseline="@id/tv_track_present"/>

    <TextView
        android:id="@+id/tv_absent_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00%"
        android:layout_toRightOf="@id/tv_track_absent"
        android:layout_alignBaseline="@id/tv_track_absent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</RelativeLayout>